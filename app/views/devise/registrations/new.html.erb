<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>



  <div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="headers_text panel-title">
            <strong >Registro de usuario:</strong>
          </h3>
        </div>
        <div class="headers_black_text panel-body">
          <div class="col-md-6">
              <h2>
                <%= f.label :nombre %><br />

              </h2>
              <p>
                <%= f.text_field :nombre, autofocus: true, :class => "form-control" %>
              </p>
              <h2>
                <%= f.label :email %><br />

              </h2>
              <p>
                <%= f.email_field :email, :class => "form-control" %>
              </p>
              <h2>
                 <strong>Contraseña</strong>

              </h2>
              <p>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> caracteres minimo)</em>
                <% end %><br />
                 <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
              </p>
              <h2>
                 <strong>Confirme su contraseña<br /></strong>

              </h2>
              <p>
                <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
              </p>
          </div>
          <div class="col-md-6 col-lg-6">
            <h2>
                <%= f.label :apellido %><br />
            </h2>
            <p>
                <%= f.text_field :apellido, :class => "form-control" %>
            </p>
            <h2>
                <strong> Apodo </strong><br />
            </h2>
            <p>
                <%= f.text_field :username, maxlength:"12", minlength:"5", :class => "form-control" %><br />
            </p>
            <h2>
                 <strong>Fecha de nacimiento </strong><br />
            </h2>
            <p>
                <%= f.date_field :fechaNacimineto, min: "1907-01-01", max:"1999-01-01", value:"1999-01-01", :class => "form-control" %>
            </p>
            <h2>
                <%= f.label :telefono %><br />
            </h2>
            <p>
                <%= f.text_field :telefono, maxlength:"12", minlength:"12", placeholder: "0000-0000000", :class => "form-control" %>
            </p>
          </div>
        </div>
        <div class="panel-footer">
          <p> <%= f.submit 'Guardar', :class => 'btn btn-success' %></p>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
