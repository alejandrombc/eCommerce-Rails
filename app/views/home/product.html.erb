<div class="container">
	<div class="card">
		<div class="container-fliud">
			<div class="wrapper row">
				<div class="preview col-md-6">
					<div class="preview-pic tab-content">
            <div class="tab-pane active" id="pic-1">
              <% if @product[:foto] != nil %>
                <img src='<%=@product[:foto]%>' style='max-height: 300px;'alt="">
              <% else %>
                <img src="http://placehold.it/320x150" style='height:100%' alt="">
              <% end %>
            </div>
					</div>
				</div>
				<div class="details col-md-6">
					<h3 class="product-title"><%=@product[:nombre]%></h3>
					<div class="rating">
						<div class="stars">
							<span class="fa fa-star checked"></span>
							<span class="fa fa-star checked"></span>
							<span class="fa fa-star checked"></span>
							<span class="fa fa-star"></span>
							<span class="fa fa-star"></span>
						</div>
						<span class="review-no"><%=@product[:cantVendida]%> producto(s) vendido(s)</span>
					</div>
					<h4 class="price">Descripción del producto:</h4>
					<p class="product-description"><%=@product[:descripcion]%></p>
					<h4 class="price">precio: <span>$<%=@product[:precio]%></span></h4>
					<div class="action">
					 <% if user_signed_in? %>
					 	<% if !session[:carro].include?(@product[:id]) %>
					 		<%= link_to 'Añadir <span class="glyphicon glyphicon-shopping-cart"></span>'.html_safe, addcar_path , :method => :post, :class => "add-to-cart btn btn-default"%>
              <%= link_to 'Editar <span class="glyphicon glyphicon-edit"></span>'.html_safe, updateProductoShow_path , :method => :get, :class => "edit-product btn btn-default"%>
              <%= link_to 'Eliminar <span class="glyphicon glyphicon-trash"></span>'.html_safe, deleteProducto_path , :method => :delete, :class => "delete-product btn btn-default"%>
					 	<% else %>
					 		<%= link_to 'Eliminar <span class="glyphicon glyphicon-shopping-cart"></span>'.html_safe, deletecar_path , :method => :delete, :class => "delete-to-cart btn btn-default"%>
              <%= link_to 'Editar <span class="glyphicon glyphicon-edit"></span>'.html_safe, updateProductoShow_path , :method => :get, :class => "edit-product btn btn-default"%>
              <%= link_to 'Eliminar <span class="glyphicon glyphicon-trash"></span>'.html_safe, deleteProducto_path , :method => :delete, :class => "delete-product btn btn-default"%>
					 	<% end %>
					 <% else %>
						<button disabled class="add-to-cart btn btn-default" type="button">Añadir al carro <span class="glyphicon glyphicon-shopping-cart"></span></button>
					  <% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>