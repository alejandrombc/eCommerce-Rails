<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="headers_text panel-title">
            <strong>Registro de usuario vía API:</strong>
          </h3>
        </div>
        <div class="headers_black_text panel-body">
          <form id="form_id" method="POST">
          <div class="col-md-12">
         
                <h2>
                  <strong><label>Email</label></strong><br>

                </h2>
                <p>
                  <input class="form-control" type="email" value="" name="email" id="user_email">
                </p>
                <h2>
                   <strong>Contraseña</strong>

                </h2>
                <p>
                   <input autocomplete="off" class="form-control" type="password" name="password" id="user_password">
                </p>
                </div>
              <div class="panel-footer">
                <p> <%= link_to 'Registrar', registershowsend_path, value: "Guardar", :class => "btn btn-success", :onclick => "$('#form_id').submit()" %></p>
              </div>
          </form>
          
          
        </div>

      </div>
    </div>
  </div>
</div>

